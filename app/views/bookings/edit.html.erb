<div class="d-flex align-items-center justify-content-center mt-5">
  <h1><strong>Edit Your Match</strong></h1>
</div>

<div class="d-flex flex-column align-items-center justify-content-center">

  <div class="card-booking mt-4 mb-2 p-4" style="width 50%">
    <div class="form-action d-flex align-items-center justify-content-center">
      <%= form_with model: @booking, local: true do |form| %>
        <%= form.label :start_date, "Start Date" %>
        <%= form.date_field :start_date %>

        <%= form.label :end_date, "End Date" %>
        <%= form.date_field :end_date %>

        <%= form.submit "Update Booking", class: "btn btn-sm btn-danger text-white" %>
      <% end %>
    </div>
  </div>

  <div class="back-link mt-2 mb-4">
    <%= link_to "Back to All Pets", pets_path, class: "btn btn-secondary text-white" %>
  </div>

</div>
