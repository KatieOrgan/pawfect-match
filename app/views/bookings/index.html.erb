<h1>My Bookings</h1>

<% if @bookings.any? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Pet Name</th>
        <th>Start Date</th>
        <th>End Date</th>
        <th>Status</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.pet.pet_name %></td>
        <td><%= booking.start_date %></td>
        <td><%= booking.end_date %></td>
        <td><%= booking.status %></td>
        <td>
          <%= link_to 'Edit', edit_booking_path(booking), class: "btn btn-secondary btn-sm" %>
            <form action="<%= booking_path(booking) %>" method="POST" style="display: inline;">
            <input type="hidden" name="_method" value="delete">
            <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure?')">Remove</button>
          </form>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% else %>
  <p>You have no bookings yet.</p>
<% end %>
