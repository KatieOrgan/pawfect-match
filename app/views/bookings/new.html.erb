<h1>Book <%= @pet.pet_name %></h1>

<%= form_with model: @booking, url: bookings_path, local: true do |f| %>
  <div>
    <strong>Pet:</strong> <%= @pet.pet_name %> (<%= @pet.breed %>)
  </div>

  <div class="form-group">
    <%= f.label :start_date, "Start Date" %>
    <%= f.date_field :start_date, required: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :end_date, "End Date" %>
    <%= f.date_field :end_date, required: true, class: "form-control" %>
  </div>

  <%= f.hidden_field :pet_id, value: @pet.id %>

  <div class="form-group">
    <%= f.submit "Confirm Booking", class: "btn btn-success" %>
  </div>
<% end %>

<div class="back-link">
  <%= link_to "Back to Pets", pets_path, class: "btn btn-secondary" %>
</div>
