<h1>Book <%= @pet.pet_name %></h1>

<%= form_with model: @booking, url: bookings_path, local: true do |f| %>
  <%= f.hidden_field :pet_id, value: @pet.id %>
  <%= f.hidden_field :status, value: "Pending" %>

  <div>
    <%= f.label :start_date, "Start Date" %>
    <%= f.date_field :start_date, required: true %>
  </div>

  <div>
    <%= f.label :end_date, "End Date" %>
    <%= f.date_field :end_date, required: true %>
  </div>

  <%= f.submit "Confirm Booking", class: "btn btn-success" %>
<% end %>

<div class="back-link">
  <%= link_to "Back to Pets", pets_path, class: "btn btn-secondary" %>
</div>
