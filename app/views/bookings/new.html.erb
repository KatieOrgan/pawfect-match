<div class="d-flex align-items-center justify-content-center">
  <h1><strong>Match With <%= @pet.pet_name %></strong></h1>
</div>

<div class="d-flex flex-column align-items-center justify-content-center">

  <div class="card-booking mt-4 mb-2 p-4" style="width 50%">
    <div class="form-action d-flex align-items-center justify-content-center">
      <%= form_with model: @booking, url: bookings_path, local: true do |f| %>
        <%= f.hidden_field :pet_id, value: @pet.id %>
        <%= f.hidden_field :status, value: "Pending" %>

        <%= f.label :start_date, "Start Date" %>
        <%= f.date_field :start_date, required: true %>

        <%= f.label :end_date, "End Date" %>
        <%= f.date_field :end_date, required: true %>

        <%= f.submit "Confirm Match", class: "btn btn-sm btn-danger text-white" %>
      <% end %>
    </div>
  </div>

  <div class="back-link mt-2 mb-4">
    <%= link_to "Back to All Pets", pets_path, class: "btn btn-secondary text-white" %>
  </div>

</div>
