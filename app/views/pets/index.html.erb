<h1>Available Pets</h1>

<% @pets.each do |pet| %>
  <div>
    <h2><%= link_to "#{pet.pet_name} (#{pet.breed})", pet_path(pet) %></h2>
    <p><strong>Age:</strong> <%= pet.age %> years</p>
    <p><strong>Size:</strong> <%= pet.size %></p>
    <p><strong>Description:</strong> <%= pet.description %></p>
  </div>
<% end %>
