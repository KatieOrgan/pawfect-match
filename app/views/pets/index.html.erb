<div class="d-flex align-items-center justify-content-center">
  <h1>All Pets</h1>
</div>

<div class="container">
<div class="row justify-content-center">
  <div class="col-sm-8 my-3">
  <%= form_with url: pets_path, method: :get, class: "d-flex rounded border border-warning" do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Type a keyword"
      %>
    <%= submit_tag "Search", name: "", class: "btn btn-danger text-white" %>
  <% end %>
</div>
</div>
</div>

<div class="card-container">
  <div class="cards">
    <% @pets.each do |pet| %>
      <div class="card-pet" style="border: 1px solid #ccc; padding: 10px; margin-bottom: 10px;">
        <% if pet.pet_photo.attached? %>
          <%= link_to pet_path(pet), class: "card-pet-image-link" do %>
            <%= image_tag url_for(pet.pet_photo), alt: "#{pet.pet_name} image", width: 200 %>
          <% end %>
        <% else %>
          <p><em>No photo uploaded</em></p>
        <% end %>

        <h2><%= "#{pet.pet_name} (#{pet.breed})" %></h2>
        <p><strong>Age:</strong> <%= pet.age %> years</p>
        <p><strong>Size:</strong> <%= pet.size %></p>
        <p><strong>Description:</strong> <%= pet.description.truncate(150) %></p>

        <% if pet.available? %>
          <p><strong>Status:</strong> Available for Booking</p>
          <!-- Booking link -->
          <%= link_to "Book #{pet.pet_name}", new_booking_path(pet_id: pet.id), class: "btn btn-primary mt-2" %>
        <% else %>
          <p><strong>Status:</strong> Not Available</p>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
